  h2 {
    border-bottom: 1px solid #d3d3d3;
    padding-bottom: .5rem;
  }
  
  .movie-card {
    border: 1px solid #d3d3d3;
    border-radius: .5rem;
    padding: 1rem; 
    margin-top: 1em;
  }
}