import Layout from '@layouts/default'

<${Layout} title="Search">
    <@body>
      <div.container>
        <h2>Searching Example</h2>
        <search-bar on-search("onSearch")/>
        <h3>Results:</h3>
        <search-stream q=input.q start=input.start offset=input.offset order=input.order/>
      </div>
    </@body>
</>

